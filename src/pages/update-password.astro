---
import Layout from "../layouts/Layout.astro";
import { UpdatePasswordFormWithToasts } from "../components/auth/AuthFormsWithToasts";
---

<Layout title="Zmiana hasła | 10DevCards">
  <main class="container mx-auto max-w-md p-6">
    <div class="bg-card rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold mb-6 text-center">Ustaw nowe hasło</h1>
      <p class="text-sm text-muted-foreground text-center mb-6">Wprowadź nowe hasło dla swojego konta.</p>
      <UpdatePasswordFormWithToasts client:idle />
    </div>
  </main>
</Layout>
