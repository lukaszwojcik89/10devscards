---
import Layout from "../layouts/Layout.astro";
import { ResetPasswordFormWithToasts } from "../components/auth/AuthFormsWithToasts";
---

<Layout title="Resetowanie hasła | 10DevCards">
  <main class="container mx-auto max-w-md p-6">
    <div class="bg-card rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold mb-6 text-center">Resetowanie hasła</h1>
      <p class="text-sm text-muted-foreground text-center mb-6">
        Podaj adres email powiązany z Twoim kontem, a wyślemy Ci instrukcje resetowania hasła.
      </p>
      <ResetPasswordFormWithToasts client:load />
    </div>
  </main>
</Layout>
      
